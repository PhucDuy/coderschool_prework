<p>
	<strong>Owner: </strong>
	<% if comment.user_id? %>
		<%= User.find(comment.user_id).email %>
	<%end%>
</p>
<p>
	<strong>comment: </strong>
	<%= comment.content %>
</p>
<%if user_signed_in?%>
	<% if current_user.id == comment.user_id%>
		<%= link_to 'Edit', edit_article_comment_path(comment.article,comment), class: 'btn btn-success' %>
		<%= link_to 'Delete', article_comment_path(comment.article,comment),class: 'btn btn-danger', method: :delete, data: {confirm: "Do you want to delete this comment?"}%>
	<%end%>
<%end%>