<div class="container">
	<div class="row">
		<div class="text-md-left col-md-6">
			<strong>Title:</strong>
			<%= @article.title %>
		</div>
		<div class="text-md-right col-md-6">
			<strong>Views:</strong>
			<%= @article.view_count %>
		</div>
	</div>
	<p>
		<strong>Body:</strong>
		<%= @markdown.render(@article.body).html_safe %>
	</p>
	<% if user_signed_in? %>
		<% if @article.user_id == current_user.id %>
			<%= link_to 'Edit', edit_article_path(@article) %> |
			<%= link_to 'Back', articles_path %>
		<% end %>
	<% end %>
	<h3>Comments:</h3>
	<%= render @article.comments %>
	<%if user_signed_in?%>
		<%= render 'comments/form' %>
	<%end%>
</div>